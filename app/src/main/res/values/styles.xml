<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/gradient_background_finish</item>
        <item name="colorPrimaryDark">@color/gradient_background_start</item>
        <item name="windowActionBar">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppDefault" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient_background_finish</item>
        <item name="colorPrimaryDark">@color/gradient_background_start</item>
        <item name="windowActionBar">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@color/colorWhite</item>

    </style>

    <style name="BackgroundApp">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="CustomEditText">
        <item name="fontFamily">@font/roboto_mono_bold</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="LoginEditText" parent="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:background" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorWhite</item>
    </style>

    <style name="LoginEditTextEmpty" parent="LoginEditText">
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonCustom">
        <item name="android:background">@drawable/background_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>

    </style>


    <style name="ButtonLight" parent="ButtonCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_26</item>
        <item name="android:layout_marginRight">@dimen/dimen_26</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:background">@drawable/bg_button_light</item>

    </style>

    <style name="WrappingTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_radius</item>
        <item name="android:layout_marginLeft">@dimen/dimen_25</item>
        <item name="android:layout_marginRight">@dimen/dimen_25</item>
        <item name="android:paddingStart">@dimen/dimen_20</item>
        <item name="android:paddingEnd">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrappingTextLayoutNotFill" parent="WrappingTextLayout">
        <item name="android:background">@drawable/background_radius_not_fill</item>

    </style>

    <style name="EditTextImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="TitleClutch">


    </style>

    <!--Sutch title of block in Setting-->
    <style name="TitleH3Clutch">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
    </style>

    <style name="TitleH5Clutch" parent="TitleClutch">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
    </style>

    <style name="TitleH4Clutch">
        <item name="android:fontFamily">@font/roboto_mono_regular</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="TitleLightClutch">
        <item name="android:fontFamily">@font/roboto_mono_light</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>


</resources>
