<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="AppDefault" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffd54f</item>
        <item name="colorPrimaryDark">#ccaa3f</item>
        <item name="windowActionBar">true</item>
        <item name="colorControlNormal">@color/white</item>

    </style>



    <style name="buttonCustom">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:background" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ButtonLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_26</item>
        <item name="android:layout_marginRight">@dimen/dimen_26</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:background">@drawable/bg_button_light</item>
    </style>

    <style name="BackgroundApp">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="WrappingTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_radius</item>
        <item name="android:layout_marginLeft">@dimen/dimen_25</item>
        <item name="android:layout_marginRight">@dimen/dimen_25</item>
        <item name="android:paddingStart">@dimen/dimen_20</item>
        <item name="android:paddingEnd">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>

        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditTextImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
    </style>


</resources>
